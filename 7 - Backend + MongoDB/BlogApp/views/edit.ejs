<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <div class="editForm">
        <form class="ui form" method="POST" action="/blogs/<%=blog._id%>?_method=PUT">
            <div class="field">
                <label>Title</label>
                <input autocomplete="off" type="text" name="blog[title]" required value="<%=blog.title%>">
            </div>

            <div class="field">
                <label>Image URL</label>
                <input autocomplete="off" type="text" name="blog[image]" value="<%=blog.image%>">
            </div>

            <div class="field">
                <label>Body</label>
                <textarea name="blog[body]" cols="30" rows="10" required><%=blog.body%></textarea>
            </div>
            <div class="formButtons">
            <button id="dontSave" class="ui button" type="submit" formaction="/blogs/<%=blog._id%>/cancel">Dont Save</button>
            <button id="saveIdea" class="ui button" type="submit">Save</button>
            
        </form>

    </div>

</div>

<% include ./partials/footer %>