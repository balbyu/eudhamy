<div class="ui main text container segment">
    <div class="ui huge header">New Idea</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input autocomplete="off" type="text" name="blog[title]" required>
        </div>

        <div class="field">
            <label>Image URL</label>
            <input autocomplete="off" type="text" name="blog[image]">
        </div>

        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]" cols="30" rows="10" required></textarea>
        </div>

        <input class="ui button" type="submit">
    </form>
</div>

