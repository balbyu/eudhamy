<% include ./partials/header %>

<% blogs.forEach((blog) => { %>
<div id="index-blog">
    <div class="ui container index-blog">
        <h2><%= blog.title %></h2>
        <img class="ui image big" src="<%= blog.image %>" alt="">
        <span id="indexDate"><%= blog.created.toDateString() %></span>
        <p><%= blog.body.substring(0, 300) %>...</p>
        <a href="/blogs/<%=blog._id%>">Read More</a>
    </div>
</div>

<% }) %>

<% include ./partials/footer %>