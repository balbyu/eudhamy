<% include ./partials/header %>

<div class="ui text raised very padded container segment">
    <div class="ui huge header"><%= blog.title %></div>

    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image huge" src="<%= blog.image %>" alt="">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%= blog.body %></p>
            </div>
            <span><form method="GET" action="/blogs/<%=blog._id%>/edit">
                <input id="editIdea" class="ui button right floated" type="submit" value="Edit Idea">
            </form>
            <form method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                <input id="deleteIdea" class="ui button right floated" type="submit" value="Delete Idea">
            </form></span>
            

        </div>
    </div>
</div>

<% include ./partials/footer %>